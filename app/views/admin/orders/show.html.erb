<h2>注文履歴詳細</h2>
  <table>
    <tbody>
      <tr>
        <th>購入者</th>
        <td><%= @order.customers.last_name %><%= @order.customers.first_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.customers.address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_methods %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= select :order_status,:name,Order.order_statuses.keys.to_a %>
          <%= select :order_status,:name,Order.order_statuses.values.to_a %>
        </td>
    </tbody>
  </table>
  <table>
    <tbody>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th></th>
      <% @order.each do |order| %>
        <tr>
          <td></td>
          <td><%= order.items.name %></td>
          <td><%= order.items.count %></td>
          <td><%=  %></td>
          <td><%= render partial: 'order_details/order_details', order: order, order_details: @order_details %></td>
        </tr>
    </tbody>
  </table>
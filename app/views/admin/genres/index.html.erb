<h4>ジャンル一覧・追加</h4>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  　<h6>ジャンル名</h6>
  　<%= f.text_field :name %>
  　<%= f.submit '新規登録' %>
  <% end %>

  <table>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </table>

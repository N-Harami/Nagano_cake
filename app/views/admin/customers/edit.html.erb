<%= form_with model: @customer, local: true, url: admin_customer_path do |f| %>
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <table>
    <tbody>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name %>  <%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_quit_status, "false" %>有効
          <%= f.radio_button :is_quit_status, "true" %>退会
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '変更を保存' %>
<% end %>
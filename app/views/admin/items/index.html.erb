<h1>商品一覧</h1>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.tax_excluded_price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td>
        <strong>
          <% if item.is_sale_status %>
            販売中
          <% elsif %>
            販売停止中
          <% end %>
        </strong>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

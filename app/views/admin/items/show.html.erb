<h2>商品詳細</h2>
<%= image_tag @item.image, size: "300x300" %>

<table>
  <tbody>
    <tr>
      <th>商品名</th>
      <td><%= @item.name %></td>
    </tr>
     <tr>
      <th>商品説明</th>
      <td><%= @item.description %></td>
    </tr>
     <tr>
      <th>税込価格<br>(税抜価格)</th>
      <td><%= (@item.tax_excluded_price * 1.1).to_i %> (<%= @item.tax_excluded_price.to_s(:delimited) %>) 円</td>
    </tr>
     <tr>
      <th>ジャンル</th>
      <td><%= @item.genre.name %></td>
    </tr>
     <tr>
      <th>販売ステータス</th>
      <td>
        <strong>
          <% if @item.is_sale_status %>
            販売中
          <% elsif %>
            販売停止中
          <% end %>
        </strong>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to '編集', edit_admin_item_path(@item) %> <%= link_to '削除', admin_item_path(@item), method: :delete, "data-confirm" => "本当に削除しますか？" %>
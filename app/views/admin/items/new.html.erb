<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :description %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.number_field :tax_excluded_price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <%= f.radio_button :is_sale_status, "true" %>販売中
          <%= f.radio_button :is_sale_status, "false" %>販売停止中
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '登録' %>
  <% end %>
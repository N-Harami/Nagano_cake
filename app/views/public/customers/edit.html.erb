<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>登録情報変更</h2>
    </div>
  </div>
<%= form_with model: @customer, url:public_customer_path, method: :patch do |f| %>
  <table>
    <tbody>
      <tr>
        <th><%= f.label "名前" %></th>
        <th><%= f.label "(姓)" %></th>
        <th><%= f.text_field :last_name %></th>
        <th><%= f.label "(名)" %></th>
        <th><%= f.text_field :first_name %></th>
      </tr>
      <tr>
        <th><%= f.label "フリガナ" %></th>
        <th><%= f.label "(セイ)" %></th>
        <th><%= f.text_field :last_name_kana %></th>
        <th><%= f.label "(メイ)" %></th>
        <th><%= f.text_field :first_name_kana %></th>
      </tr>
      <tr>
        <th><%= f.label "メールアドレス" %></th>
        <th></th>
        <th><%= f.email_field :email %></th>
      </tr>
      <tr>
        <th><%= f.label "郵便番号" %></th>
        <th></th>
        <th><%= f.text_field :postcode %></th>
      </tr>
      <tr>
        <th><%= f.label "住所" %></th>
        <th></th>
        <th colspan="5"><%= f.text_field :address, id: "customer_address", size: 60 %></th>
      </tr>
      <tr>
        <th><%= f.label "電話番号" %></th>
        <th></th>
        <th><%= f.text_field :phone_number %></th>
      </tr>
      <tr>
        <th></th>
        <td></td>
        <td><%= f.submit "編集内容を更新", class:"col btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1"><h4>配送先</h4></div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", @addresses_path, data: {"turbolinks" => false}, class:"btn btn-primary mb-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1"><h4>注文履歴</h4></div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", @orders_path, class:"btn btn-primary mb-2" %>
    </div>
  </div>
</div>
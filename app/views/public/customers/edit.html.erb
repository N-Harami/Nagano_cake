<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>登録情報変更</h2>
      <%= form_with model: @customer, url:public_customer_path, method: :patch do |f| %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
           <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "お名前" %></div>
      <div class="col-2 text-right pr-0"><%= f.label "(姓)" %></div>
      <div class="col-2"><%= f.text_field :last_name %></div>
      <div class="col-2 text-right pr-0"><%= f.label "(名)" %></div>
      <div class="col-2"><%= f.text_field :first_name %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "フリガナ" %></div>
      <div class="col-2 text-right pr-0"><%= f.label "(セイ)" %></div>
      <div class="col-2"><%= f.text_field :last_name_kana %></div>
      <div class="col-2 text-right pr-0"><%= f.label "(メイ)" %></div>
      <div class="col-2"><%= f.text_field :first_name_kana %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="col-4"><%= f.text_field :postcode %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "住所" %></div>
      <div class="col-4"><%= f.text_field :address, id: "customer_address" %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "電話番号(ハイフンなし)" %></div>
      <div class="col-4"><%= f.text_field :phone_number %></div>
    </div>

    <div class="row">
      <div class="col-4 offset-md-1 mt-3 mb-5">
        <%= f.submit "登録情報更新", class:"col btn btn-success" %>
      </div>
    </div>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1"><h4>配送先</h4></div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", @addresses_path, data: {"turbolinks" => false}, class:"btn btn-primary mb-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1"><h4>注文履歴</h4></div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", @orders_path, class:"btn btn-primary mb-2" %>
    </div>
  </div>
</div>
<% end %>
<%= form_with model: current_customer, url:public_customers_information_path, method: :patch do |f| %>
<div class="container">
  <div class="row my-3">
    <div class="col-sm-12 px-sm-0 offset-sm-1">
      <h2>会員情報編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
          <div class="row">
      <div class="col-2 offset-md-1"><%= f.label "氏名" %></div>
      <div class="col-3 text-right pr-0"><%= f.label "(姓)" %></div>
      <div class="col-3"><%= f.text_field :last_name, :size => "15" %></div>
      <div class="col-1 text-right pr-1"><%= f.label "(名)" %></div>
      <div class="col-2"><%= f.text_field :first_name, :size => "15" %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "フリガナ" %></div>
      <div class="col-2 text-right pr-0"><%= f.label "(セイ)" %></div>
      <div class="col-2"><%= f.text_field :last_name_kana, :size => "15" %></div>
      <div class="col-2 text-right pr-0"><%= f.label "(メイ)" %></div>
      <div class="col-2"><%= f.text_field :first_name_kana, :size => "15" %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email, :size => "25" %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :postcode, :size => "10" %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "住所" %></div>
      <div class="col-3"><%= f.text_field :address, :size => "40" %></div>
    </div>
    <div class="row">
      <div class="col-5 offset-md-1"><%= f.label "電話番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :phone_number %></div>
    </div>

    <div class="row">
      <div class="col-lg-9 px-sm-0 offset-sm-1">
        <%= f.submit "編集内容を保存", class:"btn btn-success my-4" %>
        <%= link_to "退会する", public_customers_check_path, class:"btn btn-danger my-4 offset-sm-4"  %>
      </div>
    </div>
</div>
<% end %>
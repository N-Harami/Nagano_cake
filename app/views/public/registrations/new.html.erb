<div class="container mt-5 mb-5">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-2 offset-md-1"><%= f.label :last_name, "お名前" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(姓)" %></div>
      <div class="col-1"><%= f.text_field :last_name %></div>
      <div></div>
      <div class="col-1 text-right pr-0"><%= f.label :first_name, "(名)" %></div>
      <div class="col-1"><%= f.text_field :first_name %></div>
    </div>
    <div class="row">
      <div class="col-2 offset-md-1"><%= f.label "フリガナ" %></div>
      <div class="col-1 text-right pr-0"><%= f.label :last_name_kana, "(セイ)" %></div>
      <div class="col-1"><%= f.text_field :last_name_kana %></div>
      <div></div>
      <div class="col-1 text-right pr-0"><%= f.label :first_name_kana, "(メイ)" %></div>
      <div class="col-1"><%= f.text_field :first_name_kana %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label :postcode, "郵便番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :postcode %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label :address, "住所" %></div>
      <div class="col-3"><%= f.text_field :address, id: "customer_address" %></div>
    </div>
    <div class="row">

      <div class="col-3 offset-md-1"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></div>
      <div class="col-3"><%= f.text_field :phone_number %></div>

    </div>
    <div class="row">
      <div class="col-3 offset-md-1">
        <% if @minimum_password_length %>
          <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      </div>
      <div class="col-3"><%= f.password_field :password %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "パスワード(確認用)" %></div>
      <div class="col-3"><%= f.password_field :password_confirmation %></div>
    </div>
    <div class="row">
      <div class="col-2 offset-md-1 mt-3 mb-5">
        <%= f.submit "新規登録", class:"col btn btn-success" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
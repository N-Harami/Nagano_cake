<div class="container mt-5 mb-5">
	<div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-xs-12 col-sm-12 col-md-6 mx-auto text-right">
     <%= attachment_image_tag @item, :image, width: "60%", format: "jpeg", fallback: "no_image.jpeg", class:"lb" %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 item-details mx-auto">
      <h2><strong><%= @item.name %></strong></h2>
      <h4><%= simple_format(@item.description)%></h4>
<!--カート機能-->

<%= form_with model: @cart_item, url:public_cart_items_path(@cart_item.id) do |f| %>

<%= f.select :quantity, *[1..20] %>


<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.submit "カートに入れる", class: "btn btn-primary" %>

<% end %>

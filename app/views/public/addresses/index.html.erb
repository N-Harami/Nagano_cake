<h1>配送先一覧・登録</h1>

<%= form_with model: @address, url:public_addresses_path do |f| %>
<h3>郵便番号</h3>
<%= f.text_field :postcode %>
<h3>住所</h3>
<%= f.text_area :address %>
<h3>宛名</h3>
<%= f.text_field :name %>
<%= f.submit "投稿" %>


<% end %>


<h3>登録先住所</h3>
<% @addresses.each do |address| %>
<p>郵便番号</p>
<%= address.postcode %>
<p>住所</p>
<%= address.address %>
<p>宛名</p>
<%= address.name %>

<% end %>


<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
    <h3 class="my-5 ml-5">配送先編集</h3>
      <%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
        <div class="field_row">
          <%= f.label :"郵便番号(ハイフンなし）", class:"col-4" %>
          <%= f.text_field :postcode, class:"col-4" %>
        </div>
        <div class="field-row">
          <%= f.label :"住所", class:"col-4" %>
          <%= f.text_field :address, class:"col-7" %>
        </div>
        <div class="field-row">
          <%= f.label :"宛名", class:"col-4" %>
          <%= f.text_field :name, class:"col-4" %>
          <%= f.submit '変更内容を保存' ,class: "col-3 btn-success " %>
        </div>
      <% end %>
    </div>
  </div>
</div>